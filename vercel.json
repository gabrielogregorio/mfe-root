{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*).js",
      "dest": "/dist/$1.js"
    },
    {
      "src": "/(.*).css",
      "dest": "/dist/$1.css"
    },
    {
      "src": "/(.*).(png|jpg|jpeg|gif|ico)",
      "dest": "/dist/$1.$2"
    },
    {
      "src": "/(.*).(html|htm)",
      "dest": "/dist/$1.$2"
    },
    {
      "src": "/.*",
      "dest": "/dist/index.html"
    }
  ]
}
